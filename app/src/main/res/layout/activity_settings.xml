<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_dark">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SETTINGS"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:letterSpacing="0.1"
            android:layout_marginBottom="30dp" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/bg_surface"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp"
            app:strokeWidth="1dp"
            app:strokeColor="#3D3A36">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swRotate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Rotate Board (1v1 Mode)"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    app:thumbTint="@color/chess_red"
                    app:trackTint="#4D4944" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swSound"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enable Move Sounds"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    app:thumbTint="@color/chess_red"
                    app:trackTint="#4D4944" />

                <androidx.appcompat.widget.SwitchCompat
                    android:id="@+id/swHelper"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Beginner Helper"
                    android:padding="16dp"
                    android:textColor="#FFFFFF"
                    app:thumbTint="@color/chess_red"
                    app:trackTint="#4D4944" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CHOOSE THEME"
            android:textColor="#8B8987"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="12dp" />

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/themeBrown"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="Classic Brown"
                android:background="@drawable/chess_button_secondary"
                android:textColor="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/themePink"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="Soft Pink"
                android:background="@drawable/chess_button_secondary"
                android:textColor="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/themeBlue"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="Ocean Blue"
                android:background="@drawable/chess_button_secondary"
                android:textColor="#FFFFFF" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/themeGreen"
                android:layout_columnWeight="1"
                android:layout_margin="4dp"
                android:text="Forest Green"
                android:background="@drawable/chess_button_secondary"
                android:textColor="#FFFFFF" />
        </GridLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBackToMenu"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="BACK TO MENU"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:background="@drawable/chess_button_red"
            android:layout_marginTop="32dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:background="@color/bg_surface">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CHESS FOR ALL"
                android:textColor="@color/chess_red"
                android:textStyle="bold"
                android:letterSpacing="0.1"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tvDeveloperCredit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Developed by: Prince N. Saye Jr \n &amp; Nyasha Perkins Mbanje"
                android:textColor="#8B8987"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginTop="12dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project Guide: Prof. Hardik Chavda \n &amp; Prof. Tejas Chauhan"
                android:textColor="#8B8987"
                android:textSize="14sp"
                android:textAlignment="center"
                android:layout_marginTop="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Final Project - 2026"
                android:textColor="#5E5C59"
                android:textSize="11sp"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>